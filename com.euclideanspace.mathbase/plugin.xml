<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="MathCategory"
            id="com.eclipse.mathbase.commands.category">
      </category>
      <command
            name="Interpret"
            categoryId="com.eclipse.mathbase.commands.category"
            id="com.eclipse.mathbase.commands.interpretCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="com.eclipse.mathbase.commands.interpretCommand"
            class="com.euclideanspace.mathbase.handlers.mathHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.eclipse.mathbase.commands.interpretCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Math"
               mnemonic="M"
               id="com.eclipse.mathbase.menus.mathMenu">
            <command
                  commandId="com.eclipse.mathbase.commands.interpretCommand"
                  mnemonic="S"
                  id="com.eclipse.mathbase.menus.interpretCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="com.eclipse.mathbase.toolbars.sampleToolbar">
            <command
                  commandId="com.eclipse.mathbase.commands.interpretCommand"
                  icon="icons/sample.gif"
                  tooltip="Say hello world"
                  id="com.eclipse.mathbase.toolbars.sampleCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
